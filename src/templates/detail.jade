h2= office.name
ul.detail-links
  if office.url
    li
      a(href=office.url title="Website")
        include ../svg/webpage.svg
  if office.facebook
    li
      a(href=office.facebook title="Facebook")
        include ../svg/facebook.svg
  if office.twitter
    li
      a(href=office.twitter title="Twitter")
        include ../svg/twitter.svg
div.detail-content-wrap
  p.detail-description
    = office.narrative
  if office.activities
    h3 Activities
    ul.detail-activities
      each activity in office.activities
        if activity === "Wildlife Photography"
          li
            img(src="./svg/wildlife-photography.svg")
            = activity
        if activity === "Wildlife Observation"
          li
            img(src="./svg/wildlife-observation.svg")
            = activity
        if activity === "Hiking"
          li
            img(src="./svg/hiking.svg")
            = activity
        if activity === "Fishing"
          li
            img(src="./svg/fishing.svg")
            = activity
        if activity === "Hunting"
          li
            img(src="./svg/hunting.svg")
            = activity
        if activity === "Boat Ramp"
          li
            img(src="./svg/boat-ramp.svg")
            = activity
        if activity === "Canoeing"
          li
            img(src="./svg/canoeing.svg")
            = activity
        if activity === "Lighthouse"
          li
            img(src="./svg/lighthouse.svg")
            = activity
        if activity === "Picnic"
          li
            img(src="./svg/picnic-shelter.svg")
            = activity
  address| #{office.address} #[br] #{office.city}, #{office.state} #{office.zip}
