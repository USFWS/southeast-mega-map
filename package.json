{
  "name": "mega-map",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
          ]
        }
      ]
    ]
  },
  "watch": {
    "minify:html": "src/index.html",
    "minify:json": "src/data/*.json",
    "shrink:img": "src/images/**/*",
    "shrink:svg": "src/svg/*.svg",
    "fonts": "src/fonts/*",
    "inject:offices": "src/templates/li.jade"
  },
  "scripts": {
    "watch:test": "watch -p 'test/*.spec.js' -c 'npm test'",
    "test": "browserify test/*.spec.js | testling",
    "prebuild:sass": "rimraf -rf dist/styles/*",
    "fonts": "ncp src/fonts dist/fonts",
    "build:sass": "node-sass --output-style compressed src/sass/styles.scss | postcss -u autoprefixer -o dist/css/styles.css",
    "prewatch:sass": "npm run build:sass",
    "watch:sass": "node-sass -w src/sass/styles.scss dist/css/styles.css",
    "minify:json": "node build/minify-json",
    "minify:html": "htmlmin -o dist/index.html src/index.html",
    "postminify:html": "npm run inject:offices",
    "prebuild:js": "rimraf -rf dist/js/*",
    "build:js": "browserify src/js/index.js | uglifyjs -mc > dist/js/bundle.js",
    "watch:js": "watchify src/js/index.js -o dist/js/bundle.js -dv",
    "shrink:img": "imagemin src/images/* --out-dir=dist/images/",
    "shrink:svg": "imagemin -P svgo src/svg/* --out-dir=dist/svg",
    "resize:img": "node build/resize-images",
    "watch:img": "node build/watch-images.js",
    "shrink:graphics": "npm run shrink:img & npm run shrink:svg & npm run resize:img",
    "serve": "browser-sync start --server dist --files 'dist/**/*'",
    "watch": "npm-watch",
    "build:dist": "node build/create-dist.js",
    "clean:dist": "rimraf -rf dist",
    "prestart": "npm run clean:dist && npm run build:dist && npm run fonts && npm run minify:html && npm run minify:json && npm run shrink:graphics",
    "start": "npm run watch & npm run watch:img & npm run watch:js & npm run watch:sass & npm run serve",
    "prebuild": "npm run clean:dist && npm run build:dist && npm run fonts",
    "build": "npm run shrink:graphics & npm run minify:html && npm run build:js && npm run build:sass && npm run minify:json",
    "inspect:bundle": "browserify --full-paths src/js/index.js | uglifyjs -mc | Discify --open",
    "publish:demo": "npm run build && gh-pages -d dist",
    "inject:offices": "node build/inject-offices"
  },
  "keywords": [],
  "author": "@r0yhewitt",
  "license": "SAX-PD",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "acorn": "^6.1.1",
    "autoprefixer": "^9.4.9",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.3",
    "browserify": "^16.2.3",
    "cheerio": "^1.0.0-rc.2",
    "chokidar": "^2.1.2",
    "disc": "^1.3.3",
    "geojson-assert": "0.0.2",
    "gh-pages": "^1.2.0",
    "html-minifier-cli": "^0.1.0",
    "imagemin": "^6.1.0",
    "imagemin-cli": "^4.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "jpegtran-bin": "^4.0.0",
    "jsonminify": "^0.4.1",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.11.0",
    "npm-watch": "^0.6.0",
    "postcss-cli": "^6.1.2",
    "query-string": "^6.2.0",
    "rimraf": "^2.6.3",
    "sharp": "^0.21.3",
    "tape": "^4.10.1",
    "testling": "^1.7.1",
    "uglify-es": "^3.3.9",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "async": "^2.6.2",
    "classlist-polyfill": "^1.2.0",
    "events": "^3.0.0",
    "has-class": "^1.0.6",
    "leaflet": "^1.3.1",
    "leaflet-knn": "^0.1.0",
    "leaflet-providers": "^1.3.1",
    "leaflet.markercluster": "^1.3.0",
    "lodash.includes": "^4.3.0",
    "lodash.map": "^4.6.0",
    "lunr": "^0.6.0",
    "madison": "^1.0.2",
    "object-assign": "^4.1.1",
    "tabbable": "^1.1.3",
    "underscore.string": "^3.3.5",
    "xhr": "^2.5.0"
  }
}
