{
  "name": "mega-map",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "browserify": {
    "transform": [
      "jadeify"
    ]
  },
  "watch": {
    "minify:html": "src/*.html",
    "minify:json": "src/data/*.json",
    "shrink:img": "src/images/**/*",
    "shrink:svg": "src/svg/**/*"
  },
  "scripts": {
    "watch:test": "watch -p 'test/*.spec.js' -c 'npm test'",
    "test": "browserify test/*.spec.js | testling",
    "prebuild:sass": "rimraf -rf dist/styles/*",
    "build:sass": "node-sass --output-style compressed src/sass/styles.scss | postcss -u autoprefixer -o dist/css/styles.css",
    "prewatch:sass": "npm run build:sass",
    "watch:sass": "node-sass -w src/sass/styles.scss dist/css/styles.css",
    "minify:json": "node build/minify-json",
    "minify:html": "htmlmin -o dist/index.html src/index.html",
    "postminify:html": "npm run inject:offices",
    "prebuild:js": "rimraf -rf dist/js/*",
    "build:js": "browserify src/js/index.js | uglifyjs -mc > dist/js/bundle.js",
    "watch:js": "watchify src/js/index.js -o dist/js/bundle.js -dv",
    "preshrink:img": "rimraf dist/images/*",
    "shrink:img": "imagemin src/images/**/* --out-dir=dist/images/",
    "shrink:svg": "imagemin -P svgo src/svg/* --out-dir=dist/svg",
    "shrink:graphics": "npm run shrink:img & npm run shrink:svg",
    "serve": "browser-sync start --server dist --files 'dist/**/*'",
    "watch": "npm-watch",
    "build:dist": "node build/create-dist.js",
    "clean:dist": "rimraf -rf dist",
    "prestart": "npm run clean:dist && npm run build:dist",
    "start": "npm run minify:html & npm run shrink:graphics & npm run watch & npm run minify:json & npm run watch:js & npm run watch:sass & npm run serve",
    "prebuild": "npm run clean:dist && npm run build:dist",
    "build": "npm run shrink:graphics & npm run minify:html && npm run build:js && npm run build:sass && npm run minify:json",
    "inspect:bundle": "browserify --full-paths src/js/index.js | uglifyjs -mc | Discify --open",
    "publish:demo": "npm run build && gh-pages -d dist",
    "inject:offices": "node build/inject-offices"
  },
  "keywords": [],
  "author": "@r0yhewitt",
  "license": "SAX-PD",
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "browser-sync": "^2.10.1",
    "browserify": "^13.1.0",
    "cheerio": "^0.20.0",
    "disc": "^1.3.2",
    "geojson-assert": "0.0.2",
    "gh-pages": "^0.8.0",
    "html-minifier-cli": "^0.1.0",
    "imagemin-cli": "^3.0.0",
    "imagemin-svgo": "^4.2.0",
    "jade": "^1.11.0",
    "jadeify": "^4.6.0",
    "jpegtran-bin": "^3.0.4",
    "jsonminify": "^0.4.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "npm-watch": "^0.1.1",
    "postcss-cli": "^2.3.3",
    "rimraf": "^2.4.4",
    "tape": "^4.6.0",
    "testling": "^1.7.1",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "async": "^2.0.1",
    "classlist-polyfill": "^1.0.2",
    "events": "^1.1.0",
    "leaflet": "^1.0.0-beta.2",
    "leaflet-knn": "^0.1.0",
    "leaflet-providers": "^1.1.14",
    "leaflet.markercluster": "git+https://github.com/Leaflet/Leaflet.markercluster.git#v1.0.0-beta.2.0",
    "lodash.defaults": "^3.1.2",
    "lodash.filter": "^4.5.1",
    "lodash.find": "^3.2.1",
    "lodash.includes": "^4.2.0",
    "lodash.map": "^4.5.1",
    "lunr": "^0.6.0",
    "madison": "^1.0.1",
    "query-string": "^4.2.2",
    "underscore.string": "^3.2.2",
    "xhr": "^2.2.0"
  }
}
